{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,      
    "outDir": "./build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
, "src/common/mongo/ormconfig.ts"  ],
  "exclude": [
    "node_modules"
  ],
}